{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "baseUrl": "./src",
    "rootDir": "./",
    "paths": {
      "~/assert": [
        "assert/index.ts"
      ],
      "~/icons": [
        "app/raw/img/icons/index.ts"
      ],
      "~/workers/*": [
        "workers/*"
      ],
      "~/*": [
        "app/*/index.vue",
        "app/*.vue",
        "app/*"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress",
  ]
}
