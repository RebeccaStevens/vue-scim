{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "baseUrl": "./src",
    "paths": {
      "~/app/*": [
        "app/*"
      ],
      "~/workers/*": [
        "workers/*"
      ],
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}
